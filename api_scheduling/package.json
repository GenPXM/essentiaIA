{
  "name": "nest-scheduling-project",
  "version": "1.0.0",
  "description": "Minimal NestJS + TypeORM (SQLite/Postgres) scheduling API",
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "seed": "ts-node src/seed.ts",
    "typeorm": "npx typeorm -d src/data-source.ts",
    "migration:generate": "npx typeorm-ts-node-commonjs migration:generate -d src/data-source.ts src/migrations/update-schema",
    "migration:create": "npx typeorm migration:create src/migrations/manual",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d src/data-source.ts",
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"

  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.4",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/typeorm": "^9.0.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "googleapis": "^163.0.0",
    "node-fetch": "^2.6.7",
    "nodemailer": "^7.0.9",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "react-icons": "^5.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sqlite3": "^5.1.6",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@nestjs/core": "^9.4.3",
    "@nestjs/testing": "^9.4.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.0",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^4.9.5"
  }
}
