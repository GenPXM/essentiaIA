  "item": [
    {
      "name": "Patients",
      "item": [
        {
          "name": "Get All Patients",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/patients",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "patients"
              ]
            }
          }
        },
        {
          "name": "Create Patient",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Jo\\u00e3o Silva\", \"email\": \"joao@example.com\"}"
            },
            "url": {
              "raw": "{{base_url}}/patients",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "patients"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Appointments",
      "item": [
        {
          "name": "Get All Appointments",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "appointments"
              ]
            }
          }
        },
        {
          "name": "Create Appointment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"patientId\": 1, \"hourId\": 1, \"service\": \"Consulta\", \"datetime\": \"2025-10-22T10:00:00.000Z\"}"
            },
            "url": {
              "raw": "{{base_url}}/appointments",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "appointments"
              ]
            }
          }
        },
        {
          "name": "Delete Appointment",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/appointments/:id",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "appointments",
                ":id"
              ]
            }
          }
        }
      ]
    },
